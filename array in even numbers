#include <stdio.h>
int main() {
    int numbers[10];
    int i, a = 0;
    printf("Enter  number:\n");
    for(i = 0; i < 10; i++) {
        scanf("%d", &numbers[i]);
    }

    for(i = 0; i < 10; i++) {
        if(numbers[i] % 2 == 0) {
            a++;
        }
    }
    printf("Total even numbers = %d\n", a);

    return 0;
}
